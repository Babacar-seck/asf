extends ../../templates/e-layout-galerie-base.pug
block extrameta
    meta(name='description' content='Artistes sans Frontières presents Catherine Pillas, painter')
    meta(name='robots', content='index, follow')
    script(src='../js/dias-code-base.js')
    script(src='../images-galerie/base/pillas/dias-listes.js')
    script(src='../js/galerie.js')

block main
    style.
        #legende{font-weight:600;}
        .am{border-color:rgba(255, 0, 0, 0.4); color:#A90101; background-color: white;margin:1px;}

    .fond
        .row-artists
            .column35
                #logoartist
                    img(src='/images-galerie/base/pillas/catherine-pillas-logo.gif' alt='Catherine Pillas, logo')
                    h1 Catherine Pillas
                    #artistmenu                        
                        a(aria-label="see the paintings again" href='epillas' title="see the paintings") 
                            button.am Oeuvres
                        br
                        button#goToBio.am(aria-label="see the biography" type='submit' title="see the biography") Biographie           
                        br
                        button#goToPhilo.am(aria-label="Artist's statement" type='submit' title="Artist's statement")  Artist's statement
                        br
                        button#goToExtratext.am(aria-label="The artist on her craft" type='submit' title="The artist on her craft")  Collage           

            .column65
                #diacontainer
                    #dias
                    #legende          
                #bio
                    h2 Biography
                    p to be followed
                #philo
                    h2 Parcours d'une artiste indépendante et autodidacte
                    p to be followed
                #extratext
                    h2 "Le classique revisité" 
                    p to be followed

        button#icons  short break